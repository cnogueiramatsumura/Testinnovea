@model Testinnovea.Models.Api.Root

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Lista de Artigos</p>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Título</th>
                <th>Autor</th>
                <th>Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.articles)
            {
                <tr>
                    <td></td>
                    <td>@item.title</td>
                    <td>@item.author</td>
                    <td>@item.description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
